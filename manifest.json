{
  "name": "999 Plus",
  "version": "1.2.0",
  "description": "Extension for sorting 999.md items",
  "permissions": ["activeTab", "declarativeContent", "storage"],
  "options_page": "options.html",
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "page_action": {
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": ["http://999.md/*", "https://999.md/*"],
      "js": ["content.js"]
    }
  ],
  "manifest_version": 2
}
